@model Org.Ktu.Isk.P175B602.Autonuoma.Models.Darbutojas.DarbutojasCE

@* this will also be used as page title in main layout *@
@{
	ViewData["title"] = "Darbuotojo sukūrimas";
}

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Index")"
		   class="btn btn-outline-primary btn-sm">
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>

@* content itself *@
<div class="main-content-ced">
	@using (Html.BeginForm(FormMethod.Post, new { @class = "entity-ce" }))
	{
		@Html.AntiForgeryToken()

		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<fieldset>
			<div class="form-group">
				@Html.LabelFor(m => m.Darbutojas.Vardas)
				@Html.EditorFor(m => m.Darbutojas.Vardas)
				@Html.ValidationMessageFor(m => m.Darbutojas.Vardas, "")
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.Darbutojas.Pavarde)
				@Html.EditorFor(m => m.Darbutojas.Pavarde)
				@Html.ValidationMessageFor(m => m.Darbutojas.Pavarde, "")
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.Darbutojas.Telefono_numeris)
				@Html.EditorFor(m => m.Darbutojas.Telefono_numeris)
				@Html.ValidationMessageFor(m => m.Darbutojas.Telefono_numeris, "")
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.Darbutojas.El_Pasto_Adresas)
				@Html.EditorFor(m => m.Darbutojas.El_Pasto_Adresas)
				@Html.ValidationMessageFor(m => m.Darbutojas.El_Pasto_Adresas, "")
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.Darbutojas.Pareigos)
				@Html.EditorFor(m => m.Darbutojas.Pareigos)
				@Html.ValidationMessageFor(m => m.Darbutojas.Pareigos, "")
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.Darbutojas.Asmens_Kodas)
				@Html.EditorFor(m => m.Darbutojas.Asmens_Kodas)
				@Html.ValidationMessageFor(m => m.Darbutojas.Asmens_Kodas, "")
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.Darbutojas.FkParduotuve)
				@Html.DropDownListFor(m => m.Darbutojas.FkParduotuve, Model.Lists.Parduotuves, (string)ViewData["none-chosen"])
				@Html.ValidationMessageFor(m => m.Darbutojas.FkParduotuve, "")
			</div>
		</fieldset>

		<div class="container-fluid d-flex d-row justify-content-end">
			<button name="save" value="1" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Išsaugoti</button>
		</div>
	}
</div>

@* content footer *@
<div class="main-content-footer">
	<span class="title"></span>
	<span class="actions">
		<a href="@Url.Action("Index")"
		   class="btn btn-outline-primary btn-sm">
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>