@model Org.Ktu.Isk.P175B602.Autonuoma.Models.Darbutojas.DarbutojasL

@* this will also be used as page title in main layout *@
@{
	ViewData["title"] = "Darbuotojo šalinimas";
}

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Index")"
		   class="btn btn-outline-primary btn-sm">
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>

@* content itself *@
<div class="main-content-ced">
	@using (Html.BeginForm(FormMethod.Post, new { @class = "entity-d" }))
	{
		@Html.AntiForgeryToken()

		<fieldset>
			<legend class="confirm-msg">Ar tikrai norite šalinti šį darbuotoją?</legend>

			<dl>
				<dt>@Html.DisplayNameFor(m => m.ID)</dt>
				<dd>@Html.DisplayFor(m => m.ID)</dd>

				<dt>@Html.DisplayNameFor(m => m.Vardas)</dt>
				<dd>@Html.DisplayFor(m => m.Vardas)</dd>

				<dt>@Html.DisplayNameFor(m => m.Pavarde)</dt>
				<dd>@Html.DisplayFor(m => m.Pavarde)</dd>

				<dt>@Html.DisplayNameFor(m => m.Telefono_numeris)</dt>
				<dd>@Html.DisplayFor(m => m.Telefono_numeris)</dd>

				<dt>@Html.DisplayNameFor(m => m.El_Pasto_Adresas)</dt>
				<dd>@Html.DisplayFor(m => m.El_Pasto_Adresas)</dd>

				<dt>@Html.DisplayNameFor(m => m.Pareigos)</dt>
				<dd>@Html.DisplayFor(m => m.Pareigos)</dd>

				<dt>@Html.DisplayNameFor(m => m.Asmens_Kodas)</dt>
				<dd>@Html.DisplayFor(m => m.Asmens_Kodas)</dd>

				<dt>@Html.DisplayNameFor(m => m.Parduotuve)</dt>
				<dd>@Html.DisplayFor(m => m.Parduotuve)</dd>
			</dl>

			@if (ViewData["deletionNotPermitted"] != null)
			{
				<div class="fail-msg">
					<i class="fa-solid fa-circle-exclamation"></i> Šio darbuotojo pašalinti negalima, nes
					jis turi ryšių į priklausomas esybes.
				</div>
			}
			else
			{
				<div class="buttons">
					<button formaction="@Url.Action("DeleteConfirm", new {id = Model.ID})"
							class="btn btn-danger"
							style="white-space: nowrap;">
						<i class="fa-solid fa-trash"></i> Šalinti
					</button>
				</div>
			}
		</fieldset>
	}
</div>

@* content footer *@
<div class="main-content-footer">
	<span class="title"></span>
	<span class="actions">
		<a href="@Url.Action("Index")"
		   class="btn btn-outline-primary btn-sm">
			<i class="fa-solid fa-angles-left"></i> Atgal į sarašą
		</a>
	</span>
</div>